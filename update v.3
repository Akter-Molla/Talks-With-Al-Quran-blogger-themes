// ==================== POST/PAGE VISIBILITY FIX ====================
function fixPostPageVisibility() {
    console.log('Fixing post/page visibility...');
    
    // Remove any hiding styles from main content areas
    const elementsToShow = [
        '.post-page-content',
        '.page-content',
        '.single-post',
        '.post-outer-container',
        '.post-outer',
        '.blog-main-section',
        '.item-page',
        '.entry-content',
        '.post-body',
        '.main-content',
        '.content'
    ];
    
    elementsToShow.forEach(selector => {
        const elements = document.querySelectorAll(selector);
        elements.forEach(element => {
            element.style.display = 'block';
            element.style.visibility = 'visible';
            element.style.opacity = '1';
        });
    });
    
    // Remove any inline hiding styles
    const allElements = document.querySelectorAll('*');
    allElements.forEach(element => {
        const style = element.getAttribute('style');
        if (style && (style.includes('display: none') || style.includes('visibility: hidden'))) {
            let newStyle = style
                .replace(/display\s*:\s*none\s*;?/gi, 'display: block !important;')
                .replace(/visibility\s*:\s*hidden\s*;?/gi, 'visibility: visible !important;')
                .replace(/opacity\s*:\s*0\s*;?/gi, 'opacity: 1 !important;');
            
            // Keep other styles but remove hiding ones
            if (!newStyle.includes('display: block')) {
                newStyle += '; display: block !important;';
            }
            if (!newStyle.includes('visibility: visible')) {
                newStyle += '; visibility: visible !important;';
            }
            
            element.setAttribute('style', newStyle);
        }
    });
    
    // Force show specific Blogger containers
    const bloggerContainers = document.querySelectorAll('[class*="post"], [class*="entry"], [class*="content"]');
    bloggerContainers.forEach(container => {
        container.style.display = 'block';
        container.style.visibility = 'visible';
        container.style.opacity = '1';
    });
    
    console.log('Post/page visibility fix applied');
}

